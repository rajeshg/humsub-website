---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import TopNavigation from "../components/top-navigation.astro";
const { frontmatter } = Astro.props;
import BaseHead from "../components/BaseHead.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import PageBackground from "../components/PageBackground.astro";
import MobileMenu from "../components/MobileMenu.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={frontmatter.title ?? SITE_TITLE}
            description={frontmatter.description ?? SITE_DESCRIPTION}
        />
    </head>
    <body>
        <div class="drawer">
			<input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
			<div class="drawer-content flex flex-col">
			  <!-- Navbar -->
			  <TopNavigation />
			  <PageBackground />
			  <!-- Page content here -->
			   <div id="markdowncontent" class="container mx-auto p-4 prose max-w-4xl text-pretty break-words">
				   <slot />
			   </div>
			</div>
			<div class="drawer-side">
			  <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
			  <MobileMenu />
			</div>
		</div>
		<Footer />
    </body>
</html>
<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
